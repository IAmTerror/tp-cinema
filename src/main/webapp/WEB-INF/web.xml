<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <!-- This is a context init parameter -->
    <!-- Configuration du chemin ou se trouve le dossier qui contient...
     ... les images de l'application (les affiches de film) -->
    <!-- Permet de gérer les images dans un dossier externe à l'application -->
    <context-param>
        <param-name>datasPath</param-name>
        <param-value>C:\Users\cyril\OUTER HEAVEN\CDA\varni\tp_cinema\sources\affiches\</param-value>
    </context-param>

    <servlet>
        <servlet-name>affiche</servlet-name>
        <servlet-class>fr.iat.cinema.Affiche</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>liste</servlet-name>
        <servlet-class>fr.iat.cinema.Liste</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>detail</servlet-name>
        <servlet-class>fr.iat.cinema.Detail</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>recherche</servlet-name>
        <servlet-class>fr.iat.cinema.Recherche</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>historique</servlet-name>
        <servlet-class>fr.iat.cinema.Historique</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>affiche</servlet-name>
        <url-pattern>/affiche</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>liste</servlet-name>
        <url-pattern>/liste</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>detail</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>recherche</servlet-name>
        <url-pattern>/recherche</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>historique</servlet-name>
        <url-pattern>/historique</url-pattern>
    </servlet-mapping>

</web-app>
